<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        // these settings are for an action bar
        // the default freedom wrapper setting is no action bar
        // as such, these settings are not used
        // however, if you want to use them, just change the "NoActionBar" to "DarkActionBar"
        <item name="colorPrimary">#000000</item>
        <item name="colorAccent">#808880</item>
        <item name="titleTextColor">#FFFFFF</item>
        // this has to be set to "false" for the action bar to work
        <item name="windowNoTitle">true</item>
        // this changes the title of the action bar
        <item name="title">The Freedom Wrapper Project</item>

        // these settings are to make the application more customized
        // some of these settings do the same thing
        // you can experiment with them to get your wrapper right where you want it!
        <item name="android:colorBackground">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="backgroundColor">#000000</item>
        <item name="android:windowBackground">#000000</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">@null</item>
        <item name="colorOnBackground">#000000</item>
        <item name="color">@null</item>
        <item name="colorBackgroundFloating">@null</item>

    </style>

</resources>